{
  "name": "@gittrends-app/geocoder-cli",
  "version": "3.1.1",
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "gittrends-geocoder": "./dist/cli.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "lint": "eslint src --ext .ts",
    "build": "tsc && tsc-alias",
    "dev": "tsx watch -r \"dotenv-flow/config\" src/cli.ts",
    "start": "node -r \"dotenv-flow/config\" dist/cli.js",
    "release": "release-it"
  },
  "dependencies": {
    "@dnlup/fastify-traps": "^3.1.0",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@gittrends-app/geocoder-core": "3.1.0",
    "commander": "^12.1.0",
    "consola": "^3.3.3",
    "fastify": "^5.2.0",
    "fastify-type-provider-zod": "^4.0.2",
    "zod": "^3.24.1"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "release-it": {
    "git": {
      "commit": true,
      "commitMessage": "chore(release): cli-v${version}",
      "tag": true,
      "tagName": "cli-v${version}",
      "push": true
    },
    "hooks": {
      "after:bump": [
        "yarn install",
        "yarn build",
        "git add ../../yarn.lock",
        "yarn shx rm ../../package-lock.json"
      ]
    }
  }
}
